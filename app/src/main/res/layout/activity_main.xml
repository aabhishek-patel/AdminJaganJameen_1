<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_jj"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/final_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bungee"
            android:text="Admin"
            android:textStyle="bold"
            android:textColor="@color/golden"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/golden"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="Night Mode"
                android:layout_height="wrap_content"/>-->

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/add_product"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:fontFamily="@font/bungee"
        android:text="Add Land"
        android:textColor="@color/colorPrimary"
        android:transitionName="trans_next_btn" />

    <Button
        android:id="@+id/add_houses"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:fontFamily="@font/bungee"
        android:text="Add Houses"
        android:textColor="@color/colorPrimary"
        android:transitionName="trans_next_btn" />

    <Button
        android:id="@+id/add_interior"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:fontFamily="@font/bungee"
        android:text="Add Interior"
        android:textColor="@color/colorPrimary"
        android:transitionName="trans_next_btn" />

    <Button
        android:id="@+id/add_build"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:fontFamily="@font/bungee"
        android:text="Add Build"
        android:textColor="@color/colorPrimary"
        android:transitionName="trans_next_btn" />

    <Button
        android:id="@+id/comments"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:fontFamily="@font/bungee"
        android:text="View Comments"
        android:textColor="@color/colorPrimary"
        android:transitionName="trans_next_btn" />


    <Button
        android:id="@+id/users"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:fontFamily="@font/bungee"
        android:text="View Users"
        android:textColor="@color/colorPrimary"
        android:transitionName="trans_next_btn" />

</LinearLayout>